@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model loudclothes.net.Models.AppUser

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Login
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Register</li>
            </ol>
        </div>

        <div class="col-lg-6 col-lg-offset-3">
            @using (Html.BeginForm("Register", "Services", FormMethod.Post))
            {
            <label>First Name :</label>   @Html.EditorFor(x => x.FirstName) <br />
            <label>Last Name :</label>   @Html.EditorFor(x => x.LastName) <br />
            <label>Street :</label>    @Html.EditorFor(x => x.Street) <br />
            <label>City :</label>   @Html.EditorFor(x => x.City) <br />
            <label>Email :</label>   @Html.EditorFor(x => x.Email) <br />
            <label>Password :</label>   @Html.EditorFor(x => x.Password)            <br />

                <input type="submit" value="Register" class="btn btn-primary">
            }
        </div>
       
</div>



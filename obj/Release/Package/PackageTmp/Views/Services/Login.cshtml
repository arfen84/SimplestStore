@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model loudclothes.net.Models.AppUser

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Login
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Log In or Register</li>
            </ol>
        </div>

        <div class="col-lg-6 col-lg-offset-3">
            @using (Html.BeginForm("Login", "Services", FormMethod.Post))
            {
                <div class="col-lg-12">
                    @Html.EditorFor(x => x.Email) <br />
                    @Html.EditorFor(x => x.Password)<br />
                    @Html.ActionLink("Register", "Register", "Services")
                    <input type="submit" value="Login" class="btn btn-primary">
                </div>

            } <br />

        </div>

        </div>
</div>

